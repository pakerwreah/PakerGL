{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "linux": {
                "args": [
                    "-lglfw",
                    "-lGLEW",
                    "-g",
                    "src/main.cpp",
                    "-o",
                    "build/engine"
                ]
            },
            "osx": {
                "args": [
                    "-framework",
                    "OpenGL",
                    "-lglfw",
                    "-lGLEW",
                    "-g",
                    "src/main.cpp",
                    "-o",
                    "build/engine"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}